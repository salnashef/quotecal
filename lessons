<body>
    <div class="calculator">
        <h2>Lesson Hours Calculator</h2>
        <div class="form-group">
            <label for="lessons">Enter Number of Lessons:</label>
            <input type="number" id="lessons" placeholder="Number of lessons" min="0">
        </div>
        <div class="form-group">
            <button onclick="calculateHours()">Calculate Hours</button>
        </div>
        <div class="result" id="result"></div>
    </div>

    <script>
        function calculateHours() {
            const lessons = document.getElementById('lessons').value;
            if (lessons === "" || lessons < 0) {
                document.getElementById('result').innerText = "Please enter a valid number of lessons.";
                return;
            }

            const totalMinutes = lessons * 45;
            const hours = Math.floor(totalMinutes / 60);
            const minutes = totalMinutes % 60;

            document.getElementById('result').innerText = `Total Time: ${hours} hour(s) and ${minutes} minute(s).`;
        }
    </script>
</body>
